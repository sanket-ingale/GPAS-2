<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_enabled="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <corners android:radius="20dp"/>
        <padding android:left="7dp" android:right="7dp" android:top="7dp" android:bottom="7dp"/>
        <stroke android:width="1dp" android:color="#000"/>
        <solid android:color="#007bff"/>
    </shape>
</item>
<item android:state_enabled="false">
    <shape android:shape="rectangle">
        <corners android:radius="20dp" />
        <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        <stroke android:width="1dp" android:color="#000" />
        <solid android:color="#5AAAFF" />
    </shape>
</item>
</selector>